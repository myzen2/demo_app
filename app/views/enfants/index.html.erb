<h1 class="titre">Liste des enfants</h1>
<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Prénom</th>
        <th>Date de naissance</th>
        <th>Age</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @enfants.each do |enfant| %>
        <tr>
          <td><%= enfant.nom %></td>
          <td><%= enfant.prenom %></td>
          <td><%= enfant.date_de_naissance %></td>
          <td><%= enfant.age %> ans</td>
          <td><%= link_to 'Montrer', enfant %></td>
          <td><%= link_to 'Modifier', edit_enfant_path(enfant) %></td>
          <td><%= link_to 'Supprimer', enfant, method: :delete, data: { confirm: 'Etes-vous sûr ?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= button_to 'Ajouter un enfant', new_enfant_path, method: :get, class: "btn btn-primary" %>